\& #
\& #$data\->use_storage; # 蓄eする
\& #$data\->no_storage;  # 蓄eしない
.Ve
.PP
.Vb 5
\& #
\& # 学C能用DBに使用するDBMをSDBM_Fileに指定
\& # （デフォルトは、DB_FileのBTREEモ`ド）
\& #
\& #$data\->use_SDBM;
.Ve
.PP
.Vb 7
\& #
\& # ^去のドキュメントの累eyを使う龊悉违签`タベ`スの
\& # ファイル名をセット
\& # （デフォルトは "stat.db"と"comb.db"）
\& #
\& $data\->stat_db("statGB.db");
\& $data\->comb_db("combGB.db");
.Ve
.PP
.Vb 5
\& #
\& # デ`タベ`スの排他ロックのための一rディレクトリを指定
\& # ディレクトリ名が空文字列（デフォルト）の龊悉膝恁氓しない
\& #
\& #$data\->lock_dir("lock_dir");
.Ve
.PP
.Vb 7
\& #
\& # デ`タをiみzみ
\& # T用Zリストを配列に返す
\& # （累eyDB使用、ドキュメント中のl度使用にセット）
\& #
\& #my @noun_list = $data\->get_imp_word($str, \(aqvar\(aq);     # 入力が涫
\& my @noun_list = $data\->get_imp_word($InputFile); # 入力がファイル
.Ve
.PP
.Vb 7
\& #
\& # 前回iみzんだテキストファイルを元に
\& # モ`ドを浃à啤T用Zリストを配列に返す
\& #$data\->use_stat\->no_frq;
\& #my @noun_list2 = $data\->get_imp_word();
\& # また、そのY果をeのモ`ドによるY果と欷焙悉铯护
\& #@noun_list = $data\->result_filter (\e@noun_list, \e@noun_list2, 30, 1000);
.Ve
.PP
.Vb 10
\& #
\& #  T用Zリストと算した重要度を食隽Δ顺訾
\& #
\& foreach (@noun_list) {
\&    # 数のみは表示しない
\&    next if $_\->[0] =~ /^\ed+$/;
\&    # 1文字(GB)のみは表示しない
\&    next if $_\->[0] =~ /^[\ex00\-\ex7F]$/;
\&    next if $_\->[0] =~ /^[\ex81\-\exFE][\ex40\-\exFE]$/;
\&    next if $_\->[0] =~ /^[\ex81\-\exEF][\ex30\-\ex39][\ex81\-\exEF][\ex30\-\ex39]$/;
.Ve
.PP
.Vb 5
\&    # Y果表示（$output_modeに辘袱啤⒊隽式を涓
\&    printf "%\-60s %16.2f\en", $_\->[0], $_\->[1] if $output_mode == 1;
\&    printf "%s\en",           $_\->[0]          if $output_mode == 2;
\&    printf "%s,",            $_\->[0]          if $output_mode == 3;
\& }
.Ve
